extends /_layout/_default-layout

append config-block
  - pageId = 'index'
  - dataPath = `${rootPath}data/`

block content-block
  header
    h1
      = settings.site_name

  main
    .cfm-index
      ul.list
        each item in works
          .cfm-card
            a.elm-a(href=`${rootPath}detail/${item.id}.html`)
              .card.mdl-card.mdl-shadow--2dp(style=`background: url('${dataPath}${item.picture}') center / cover`)
                .title.mdl-card__title.mdl-card--expand
                  h2.heading
                    = item.id
                .actions.mdl-card__actions
                  span.filename.demo-card-image__filename
                    = item.picture
